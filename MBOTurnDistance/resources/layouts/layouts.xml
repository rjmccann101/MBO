<layouts>
	<!-- A generic, centered layout. -->
	<layout id="MainLayout">
		<drawable class="Background" />
		<label id="turn1" x="center" y="top"
			color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_CENTER"
			font="Graphics.FONT_SMALL" />
		<label id="turn2" x="center" y="center"
			color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_CENTER"
			font="Graphics.FONT_SMALL" />
		<label id="turn3" x="center" y="bottom"
			color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_CENTER"
			font="Graphics.FONT_SMALL" />
	</layout>

	<!-- Layouts used for the for the four quadrants. -->
	<layout id="TopLeftLayout">
		<drawable class="Background" />
		<label id="turn1" x="95" y="top" color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_RIGHT"
			font="Graphics.FONT_SMALL" />
		<label id="turn2" x="95" y="center" color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_RIGHT"
			font="Graphics.FONT_SMALL" />
		<label id="turn3" x="95" y="bottom" color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_RIGHT"
			font="Graphics.FONT_SMALL" />
	</layout>
	<layout id="TopRightLayout">
		<drawable class="Background" />
		<label id="turn1" x="14" y="top" color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_LEFT" font="Graphics.FONT_SMALL" />
		<label id="turn2" x="14" y="center" color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_LEFT" font="Graphics.FONT_SMALL" />
		<label id="turn3" x="14" y="bottom" color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_LEFT" font="Graphics.FONT_SMALL" />
	</layout>
	<layout id="BottomLeftLayout">
		<drawable class="Background" />
		<label id="turn1" x="95" y="top" color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_RIGHT"
			font="Graphics.FONT_SMALL" />
		<label id="turn2" x="95" y="center" color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_RIGHT"
			font="Graphics.FONT_SMALL" />
		<label id="turn3" x="95" y="bottom" color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_RIGHT"
			font="Graphics.FONT_SMALL" />
	</layout>
	<layout id="BottomRightLayout">
		<drawable class="Background" />
		<label id="turn1" x="14" y="top" color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_LEFT" font="Graphics.FONT_SMALL" />
		<label id="turn2" x="14" y="center" color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_LEFT" font="Graphics.FONT_SMALL" />
		<label id="turn3" x="14" y="bottom" color="Graphics.COLOR_WHITE"
			justification="Graphics.TEXT_JUSTIFY_LEFT" font="Graphics.FONT_SMALL" />
	</layout>
</layouts>
